# text parameters
font.family : sans-serif
font.sans-serif : Helvetica
font.style : normal
font.variant : normal
font.weight : normal
font.stretch : normal
text.usetex : False
axes.titlesize : 10
axes.labelsize : 10
xtick.labelsize : 8
ytick.labelsize : 8
legend.fontsize : 8

# figure formatting
figure.titlesize : large
figure.titleweight : normal
figure.figsize : 6.4, 4.8
figure.dpi : 300
figure.facecolor : white
figure.edgecolor : white
figure.frameon : True

# error bars and legend formatting
errorbar.capsize : 5
legend.numpoints : 1

# axes and tick formatting
axes.linewidth : .75
axes.spines.left : True
axes.spines.bottom : True
axes.spines.top : True
axes.spines.right : True
xtick.direction : out
ytick.direction : out
ytick.left : True
xtick.bottom : True
xtick.minor.visible : True
ytick.minor.visible : True
xtick.major.size : 3.5
ytick.major.size : 3.5
xtick.minor.size : 2.
ytick.minor.size : 2.
xtick.major.width : .5
ytick.major.width : .5
xtick.minor.width : .5
ytick.minor.width : .5

# other formatting
lines.linewidth : 3
lines.markersize : 10